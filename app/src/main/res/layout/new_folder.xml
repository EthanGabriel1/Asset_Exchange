<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".All_Tasks">



    <FrameLayout
        android:id="@+id/sheet"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/cardview_layout"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">


            <TextView
                android:id="@+id/txt_newfolder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Folder"
                android:textColor="#3E3E3E"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <Button
                android:id="@+id/btn_add_folder"
                android:layout_width="81dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="-15dp"
                android:background="@android:color/transparent"
                android:text="Add"
                android:textColor="#A1A1A1"
                android:textSize="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/txt_newfolder"
                app:layout_constraintTop_toTopOf="parent" />


            <Button
                android:id="@+id/btn_new_asset_folder"
                android:layout_width="match_parent"
                android:paddingLeft="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@android:color/transparent"
                android:drawableRight="@drawable/alert_circle"
                android:fontFamily="@font/roboto_regular"
                android:gravity="left"
                android:text="New Asset Folder"
                android:textColor="#454545"
                android:textSize="22dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_newfolder" />

            <Button
                android:id="@+id/btn_new_project"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="50dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/transparent"
                android:drawableRight="@drawable/alert_circle"
                android:fontFamily="@font/roboto_regular"
                android:gravity="left"
                android:text="New Project"
                android:textColor="#454545"
                android:textSize="22dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_new_asset_folder" />

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/btn_new_asset_folder"
                app:layout_constraintEnd_toEndOf="@+id/btn_new_asset_folder"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/btn_new_asset_folder"
                app:layout_constraintTop_toTopOf="@+id/btn_new_asset_folder"
                app:layout_constraintVertical_bias="0.448"
                app:srcCompat="@drawable/folder_newfolder" />

            <ImageView
                android:id="@+id/imageView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/btn_new_project"
                app:layout_constraintEnd_toEndOf="@+id/btn_new_project"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/btn_new_project"
                app:layout_constraintTop_toTopOf="@+id/btn_new_project"
                app:layout_constraintVertical_bias="0.44"
                app:srcCompat="@drawable/star_newfolder" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
